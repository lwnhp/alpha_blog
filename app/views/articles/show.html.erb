<h2 align=center>Titel: <%= @article.title %></h2>
    <div class="well col-xs-8 col-xs-offset-2">
        <% if @article.user %>
            <ul class="userlist">
            <div class="row" align="center">
                <div class="col-md-4 col-md-offset-4">
                    <li>Created by:</li>
                    <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                    <li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></li>
                    <li><small><%= pluralize(@article.user.articles.count, "artikel") if @article.user.articles %></small></li>
                </div>
            </div>
            </ul>
        <% end %>
    <h4 class="center omschrijving"><strong>Omschrijving/Inhoud:</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>

    <div class="article-actions">
        <% if logged_in? && current_user == (@article.user or current_user.admin?) %>
            <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary btn-xs" %>
            <%= link_to "Delete this article", article_path(@article), method: :delete, data: { confirm: "Weet u het zeker? OK=delete"}, 
                                                class: "btn btn-danger btn-xs" %>
        <% end %>
        <%= link_to "Bekijk alle artikelen", articles_path, class: "btn btn-success btn-xs" %>
    </div>
</div>