<% @users.each do |user| %>
    <ul class="userlist">
        <div class="row" align="center">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="article-title"><%= link_to user.username, user_path(user) %></li>
                <li><small><%= pluralize(user.articles.count, "artikel") if user.articles %></small></li>
                <% if logged_in? and current_user.admin? %>
                    <li>
                        <%= link_to "Delete user", user_path(user), method: :delete, data: {confirm: "Zeker weten? Y=delete user en zijn/haar artikelen"} =%>
                    </li>
                <% end %>
            </div>
        </div>
    </ul>
<% end %>