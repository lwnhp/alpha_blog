<h1 align="center"> Een nieuwe categorie aanmaken:</h1>

<%= render 'shared/errors', obj: @category %>

    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :categorie_naam %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Enter categorie naam", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
        </div>
    <% end %>
        
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "cancel en terug naar categorie overzicht", categories_path %> ]
        </div>