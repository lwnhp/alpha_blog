<h1 align="center">Categorie overzicht</h1>
<div align="center">
    <%= will_paginate @categories %>
        <% @categories.each do |category| %>
            <ul class="userlist">
                <div class="row" align="center">
                    <div class="well col-md-4 col-md-offset-4">
                        <li class="artikel-titel">
                            <%= link_to "#{category.name}", category_path(category) %>
                            <p><li><small>
                                (<%= pluralize(category.articles.count, "artikel") if category.articles %>)
                              </small></li></p>
                        </li>
                    </div>
                </div>
            </ul>
        <% end %>
    <%= will_paginate %>
</div>